<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings
	xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
	version="1.0">

	<mapped-superclass
		class="es.mde.acing.gatel.ModeloImpl" access="FIELD">
		<attributes>

			<basic name="marca" />
			<basic name="nombreModelo" />
			<basic name="detalles" />
			<basic name="imagen" optional="false">
				<column name="imagen" />
			</basic>

			<one-to-many name="equipos" mapped-by="modelo"
				target-entity="es.mdef.apigatel.entidades.EquipoConId" />

		</attributes>
	</mapped-superclass>

</entity-mappings>
